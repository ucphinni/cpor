# Home Assistant MQTT Configuration
MQTT_BROKER=192.168.8.241
MQTT_PORT=1883
MQTT_USER=mqtt-username
MQTT_PASSWORD=mqtt-password
MQTT_USE_SSL=false
MQTT_TOPIC=home/+/temperature
MQTT_CLIENT_ID=mqtt-client-id

# Google Cloud and Nest Configuration
GCP_PROJECT_ID=your-project-id
NEST_PROJECT_ID=your-project-uuid
NEST_CLIENT_ID=your-client-id.apps.googleusercontent.com
NEST_CLIENT_SECRET=GOCSPX-your-client-secret
NEST_ACCESS_TOKEN=  # This will be auto-populated by the application
NEST_REFRESH_TOKEN=1//your-refresh-token

# Google Cloud Pub/Sub Configuration
PUBSUB_SUBSCRIPTION_ID=nest-subscription  # Just the subscription name, not the full path
